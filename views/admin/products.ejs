<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/productError.css">
</head>

<body>
    <%- include('../includes/navigation.ejs')%>

    <main>
        <%if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="/<%= product.ImageURL %>"
                                alt="<%= product.title %>">
                        </div>
                        <div class="card__content">
                            <h1 class="product__discount">UP TO<%= product.discount %> %OFF</h2>
                            <h2 class="product__price">â‚¹ <%= product.Price %></h2>
                            <p class="product__description"><%= product.description %></p>
                            <p class="product__freedelivery"><%= product.freedelivery %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/admin/edit-product/<%= product._id %>?edit=true" class="btn">Edit</a>
                                <form action="/admin/delete-product" method="POST">
                                    <input type="hidden" value="<%= csrfToken%>" name="_csrf">
                                    <input type="hidden" value="<%= product._id %>" name="productId">
                                    <button class="btn" type="submit">Delete</button>
                                </form>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <div class="wrapper">
                <div class="box">
                    <h2 id="hhh">product not found</h2>
                </div>
                </div>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %> 